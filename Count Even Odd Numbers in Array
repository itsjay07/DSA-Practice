package com.dsa;



public class CountEvenOddNums {

	public static void main(String[] args) {
		
		
		int[] arr = {2,5,4,6,1,9,23,12,44};
		
		int evenNums = 0;
		
		int OddNums = 0;
		
		for(int i = 0; i < arr.length; i++)
		{
			if( i % 2 == 0)
			{
				evenNums++;
				
			}
			else {
			OddNums++;
			
			}
		}
		
		System.out.println("Even Numbers are : "+evenNums);
		System.out.println("OddNums are : "+OddNums);

	}

}
