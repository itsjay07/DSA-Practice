package com.dsa;

public class FindMissingNumInArr {
	
	int getMissingNum(int[] arr)
	{
		int n = arr.length + 1;   // because one number is missing
		
		int totalSum = n * (n + 1) / 2;
		
		int arrSum = 0;
		
		for(int i = 0; i < arr.length; i++)
		{
			arrSum = arrSum + arr[i];
		}
		
		return totalSum - arrSum;
	}
	
	
	public static void main(String[] args) {
		
		FindMissingNumInArr obj = new FindMissingNumInArr();
		
		int[] arr = {1, 2, 3, 5};   
		
		int missing = obj.getMissingNum(arr);
		
		System.out.println("Missing number is: " + missing);
	}
}
